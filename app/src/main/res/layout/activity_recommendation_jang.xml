<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitiesRecommendation.Recommendation_jang">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/black">

        <ImageButton
            android:id="@+id/recommendation_delete_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:background="@color/alpha"
            android:src="@drawable/ic_keyboard_arrow_left" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/alpha"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="영화 장르별 추천"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="장르를 선택해주세요"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="60dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/romance"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/theater_list_circle"
                android:text="로맨스" />

            <Button
                android:id="@+id/drama"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/theater_list_circle"
                android:text="드라마" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/family"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/theater_list_circle"
                android:text="가족" />

            <Button
                android:id="@+id/ani"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/theater_list_circle"
                android:text="애니" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Thriller"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/theater_list_circle"
                android:text="스릴러" />

            <Button
                android:id="@+id/Mystery"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/theater_list_circle"
                android:text="미스터리" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Docu"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/theater_list_circle"
                android:text="다큐" />

            <Button
                android:id="@+id/Comedy"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/theater_list_circle"
                android:text="코미디" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>