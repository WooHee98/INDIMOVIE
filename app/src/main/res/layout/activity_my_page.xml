<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activitys.MyPageActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/black">


        <ImageButton
            android:id="@+id/reservationlist_delete_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:background="@color/alpha"
            android:src="@drawable/ic_keyboard_arrow_left" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/alpha"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="마이인디"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_settings_mypage"

            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/mylinear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/toggle_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/id_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mylinear1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:background="@color/white"
            android:orientation="vertical">

            <Button
                android:id="@+id/mypage_info_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:backgroundTint="@color/grey_100"
                android:text="개인정보 수정"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:background="@color/white"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <TableRow android:gravity="center">

                    <Button
                        android:id="@+id/mypage_wish_btn"
                        android:layout_height="70dp"
                        android:layout_marginRight="7dp"
                        android:backgroundTint="@color/grey_100"
                        android:text="위시리스트"
                        android:textColor="@color/black"
                        android:textSize="13sp"></Button>

                    <Button
                        android:id="@+id/mypage_seen_btn"
                        android:layout_height="70dp"
                        android:layout_marginRight="7dp"
                        android:backgroundTint="@color/grey_100"
                        android:text="    본영화    "
                        android:textColor="@color/black"
                        android:textSize="13sp"></Button>


                    <Button
                        android:id="@+id/mypage_reserlist_btn"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/grey_100"
                        android:text="  예매내역  "
                        android:textColor="@color/black"
                        android:textSize="13sp"></Button>


                </TableRow>

                <TableRow android:gravity="center">

                    <Button
                        android:id="@+id/mypage_mysinario_btn"
                        android:layout_height="70dp"
                        android:layout_marginRight="7dp"
                        android:backgroundTint="@color/grey_100"
                        android:text="내시나리오"
                        android:textColor="@color/black"
                        android:textSize="13sp"></Button>

                    <Button
                        android:id="@+id/mypage_payed_sinario_btn"
                        android:layout_height="70dp"
                        android:layout_marginRight="7dp"
                        android:backgroundTint="@color/grey_100"
                        android:text="후원한\n시나리오"
                        android:textColor="@color/black"
                        android:textSize="13sp"></Button>

                    <Button
                        android:id="@+id/mypage_donatepayinfo_btn"
                        android:layout_height="70dp"

                        android:backgroundTint="@color/grey_100"
                        android:text="후원\n결제정보"
                        android:textColor="@color/black"
                        android:textSize="13sp"></Button>

                </TableRow>

                <TableRow android:gravity="center">


                    <Button
                        android:id="@+id/mypage_oneline_btn"
                        android:layout_height="70dp"
                        android:layout_marginRight="7dp"
                        android:backgroundTint="@color/grey_100"
                        android:text="나의\n한줄평"
                        android:textColor="@color/black"
                        android:textSize="13sp"></Button>


                    <Button
                        android:id="@+id/mypage_center_btn"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/grey_100"
                        android:text="자주묻는\n질문"
                        android:textColor="@color/black"
                        android:textSize="13sp"></Button>

                    <Button
                        android:id="@+id/mypage_admin_btn"
                        android:layout_height="70dp"
                        android:layout_marginRight="7dp"
                        android:backgroundTint="@color/grey_100"
                        android:text="관리자\n1:1문의"
                        android:textColor="@color/black"
                        android:textSize="13sp"></Button>


                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/nav_content_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:backgroundTint="@color/grey_100"
                android:text="공지사항"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>